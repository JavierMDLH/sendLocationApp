<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switchSend"
        android:layout_width="143dp"
        android:layout_height="72dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="76dp"
        android:text="Switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipNumber3" />

    <EditText
        android:id="@+id/ipNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="145dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ipNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipNumber" />

    <EditText
        android:id="@+id/ipNumber3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipNumber2" />

    <EditText
        android:id="@+id/portNumber"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="149dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/ipNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/portNumber3"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/ipNumber3"
        app:layout_constraintTop_toBottomOf="@+id/portNumber2" />

    <EditText
        android:id="@+id/portNumber2"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/ipNumber2"
        app:layout_constraintTop_toBottomOf="@+id/portNumber" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="82dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchSend" />

</androidx.constraintlayout.widget.ConstraintLayout>